<%= form_for @changeset, @action, fn f -> %>

<%= if @changeset.action do %>
<div class="alert alert-danger">
	<p>Oops, something went wrong! Please check the errors below.</p>
</div>
<% end %>

<%= label f, :name %>
<%= text_input f, :name %>
<%= error_tag f, :name %>

<div class="actions">
	<%= link "Back", to: Routes.category_path(@conn, :index), class: "button button-outline" %>
	<%= submit "Save" %>
</div>

<% end %>
